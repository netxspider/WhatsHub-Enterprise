{
    "builds": [
        {
            "src": "server/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}